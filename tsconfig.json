{
  "$schema": "https://json.schemastore.org/tsconfig",
  "references": [
    { "path": "./api" },
    { "path": "./cli" },
    { "path": "./get" }
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
